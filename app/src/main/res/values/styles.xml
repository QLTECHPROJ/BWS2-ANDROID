<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue_gray</item>
        <item name="colorAccent">@color/dark_blue_gray</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_blue_gray</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/dark_blue_gray</item>
    </style>

    <style name="WallSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/et_underline_selector</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">9dp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">9dp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_blue_gray
        </item>
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ErrorText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/dark_blue_gray</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_margin">@dimen/_18sdp</item>
        <item name="elevation">@dimen/_50sdp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>


</resources>