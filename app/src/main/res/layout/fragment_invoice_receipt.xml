<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background"
        tools:context="com.brainwellnessspa.InvoiceModule.Fragments.InvoiceReceiptFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/llReceipt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/dark_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left"
                        android:text="@string/View_order_details"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/rounded_black_corner_square"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvDateTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvOrderIdTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvOrderId"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvTotalTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/rounded_black_corner_square"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.70"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvQty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/tvSession"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.30">

                                <TextView
                                    android:id="@+id/tvOrderTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="right"
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left"
                        android:text="@string/Payment_information"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/rounded_black_corner_square"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="left"
                            android:paddingHorizontal="@dimen/_13sdp"
                            android:paddingTop="@dimen/_13sdp"
                            android:visibility="gone"
                            android:text="Payment Method:"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_16sdp" />

                        <TextView
                            android:id="@+id/tvPaymentDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingHorizontal="@dimen/_13sdp"
                            android:paddingBottom="@dimen/_13sdp"
                            android:visibility="gone"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:id="@+id/views"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:visibility="gone"
                            android:background="#EEEEEE" />

                        <TextView
                            android:id="@+id/tvFromTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:paddingHorizontal="@dimen/_13sdp"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/tvFromAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingHorizontal="@dimen/_13sdp"
                            android:paddingBottom="@dimen/_13sdp"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBilledTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@drawable/rounded_black_corner_square"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="@dimen/_13sdp">

                        <TextView
                            android:id="@+id/tvBilledToTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/tvBilledTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left"
                        android:text="@string/Order_summary"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_14sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginBottom="@dimen/_22sdp"
                        android:background="@drawable/rounded_black_corner_square"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvItemsTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvItems"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="right"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvGstTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvGst"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="right"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvOrderTotalAmountTitle"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tvOrderTotalAmount"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="right"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_60sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:indeterminateTint="@color/blue"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />
    </RelativeLayout>

</layout>