<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/llMainLayout"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.18">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/ivRestaurantImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCenterLayoutA"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_weight="0.69">

            <TextView
                android:id="@+id/tvTitleA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvTimeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start"
                android:textColor="@color/extra_light_gray"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCenterLayoutB"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_weight="0.43">

            <TextView
                android:id="@+id/tvTitleB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvTimeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start"
                android:textColor="@color/extra_light_gray"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMore"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.13">

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_menu_icon"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDownload"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.13">

            <ImageView
                android:id="@+id/ivDownloads"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_download_icon"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRemove"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.13">

            <ImageView
                android:id="@+id/ivRemove"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/remove_icon"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSort"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.13">

            <ImageView
                android:id="@+id/ivSort"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_sort_icon"/>

        </LinearLayout>

    </LinearLayout>
</layout>