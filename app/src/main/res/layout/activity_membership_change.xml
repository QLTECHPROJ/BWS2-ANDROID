                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Unlock your emotional potential from The Comfort of Your Home"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:text="Develop yourself in the comfort of your home while you sleep. Gain access to over 65 audio programs helping you to live inspired and improve your mental wellbeing. Become a member today and enjoy the benefits free for one month."
