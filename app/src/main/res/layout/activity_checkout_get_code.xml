<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context="com.brainwellnessspa.MembershipModule.Activities.CheckoutGetCodeActivity">

            <RelativeLayout
                android:id="@+id/rlLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp">

                <LinearLayout
                    android:id="@+id/llBack"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_left_arrow_icon"
                        app:tint="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/Checkout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlLayout"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:gravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivRestaurantImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/ic_checkout_logo"
                            app:layout_constraintDimensionRatio="1:1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.55"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/cvBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:background="@drawable/signup_cardshape_background"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rlCountrySelect"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/_6sdp">

                                <TextView
                                    android:id="@+id/tvCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:text="Australia"
                                    android:textColor="@color/dark_blue_gray"
                                    android:textSize="@dimen/_16sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/right_arrow"
                                    app:tint="@color/dark_blue_gray" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E47E7E7E" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tvCountryCode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.18"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:paddingVertical="@dimen/_12sdp"
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:text="+61"
                                    android:textColor="@color/dark_blue_gray"
                                    android:textSize="@dimen/_16sdp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#E47E7E7E" />

                                <EditText
                                    android:id="@+id/edtNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@id/tvCountryCode"
                                    android:layout_weight="0.82"
                                    android:background="@null"
                                    android:backgroundTint="@color/dim_light_gray"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:hint="@string/mobile_number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:textColor="@color/dark_blue_gray"
                                    android:textColorHint="@color/dark_blue_gray"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/_16sdp"
                                    app:hintTextColor="@color/dark_blue_gray" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cvBox"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="center"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvSendCodeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/montserrat_light"
                                android:gravity="center"
                                android:text="@string/send_code_text"
                                android:textColor="@color/dark_blue_gray"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/btnSendCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_24sdp"
                            android:background="@drawable/gray_round_cornor"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingHorizontal="@dimen/_55sdp"
                            android:paddingVertical="@dimen/_4sdp"
                            android:text="@string/get_the_code"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_60sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:indeterminateTint="@color/blue"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />
    </RelativeLayout>
</layout>