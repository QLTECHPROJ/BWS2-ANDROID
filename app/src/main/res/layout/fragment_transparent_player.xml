<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/f_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardModule.TransparentPlayer.Fragments.TransparentPlayerFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/flProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/llPlayearMain"
                android:layout_marginLeft="-16dp"
                android:layout_marginRight="-16dp"
                android:layout_marginBottom="-9dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <SeekBar
                    android:id="@+id/simpleSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center|center_vertical|bottom"
                    android:progressDrawable="@drawable/seek_bar"
                    android:textColor="@color/white"
                    android:thumb="@null" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/llPlayearMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_56sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llPlaSong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:background="#DDDDDD"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/nav_view">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/ivRestaurantImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_bold"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />

                            <TextView
                                android:id="@+id/tvSubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_medium"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivPause"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            android:padding="@dimen/_13sdp"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_all_pause_icon" />
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="0.00dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:scaleType="fitXY"
                            android:layout_weight="0.13"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivPlay"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            android:padding="@dimen/_13sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_play_icon"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>
