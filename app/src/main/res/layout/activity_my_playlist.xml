<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue_gray">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_26sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_56sdp">

                    <LinearLayout
                        android:id="@+id/llBack"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close_white_icon"
                            app:tint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivRestaurantImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_playlist_bg" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="My Playlist"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="7 Audios | 4h 40m"
                    android:textColor="#838383"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:id="@+id/llRename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_15sdp"
                        android:src="@drawable/ic_edit_number_icon" />

                    <TextView
                        android:id="@+id/tvRename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:text="@string/Rename_playlist"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_18sdp"
                        android:src="@drawable/ic_close_white_icon" />

                    <TextView
                        android:id="@+id/tvDelete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:text="@string/Delete_playlist"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_15sdp"
                        android:src="@drawable/ic_download_white_icon" />

                    <TextView
                        android:id="@+id/tvDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:text="@string/Download_playlist"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/ImgV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="80dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />
    </RelativeLayout>
</layout>