<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:orientation="vertical">
        <!--ic_current_session_bg-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-2dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:src="@drawable/ic_current_session_bg"
                android:visibility="visible"
                tools:ignore="RtlSymmetry,SpUsage"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:visibility="visible"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:text="@string/current_session"
                android:textSize="@dimen/_8sdp"
                tools:ignore="SpUsage" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/session_selected_bg"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/session_done_icon"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/todo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.67"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/dark_blue_gray"
                    android:text="Session 1"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/tvSentData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/dark_blue_gray"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="We begin your journey towards emotional empowerment by helping you to strengthen your foundations..."
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        app:tint="@color/dark_blue_gray"
                        android:src="@drawable/ic_calendar_icon"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="4 Nov, 2020"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                    <ImageView
                        android:layout_width="@dimen/_29sdp"
                        android:layout_height="@dimen/_29sdp"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_gravity="center"
                        app:tint="@color/dark_blue_gray"
                        android:src="@drawable/ic_payment_cash_icon"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvDoller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="11:00 am"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:paddingHorizontal="@dimen/_6sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="Before Session:"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tvBeforeSession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="start"
                        android:text="Confused, Sad, Angry"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="After Session:"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tvAfterSession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="start"
                        android:text="Relaxed, Peaceful, Happy"
                        android:textColor="@color/green_dark_s"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="0.16">

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_56sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:contentDescription="@string/todo"
                    android:padding="@dimen/_16sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_right_gray_arrow_icon" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewUp"
            android:layout_width="8dp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:background="@color/session_progress" />

        <View
            android:id="@+id/viewDown"
            android:layout_width="8dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_96sdp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_35sdp"
            android:background="@color/session_progress" />
    </RelativeLayout>
</layout>