<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/account_gray_bg"
        android:elevation="@dimen/_110sdp"
        tools:targetApi="lollipop">


        <LinearLayout
            android:id="@+id/llAddNewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_18sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.14"
                android:gravity="center_vertical|left">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="gone"
                    android:contentDescription="@string/todo" />

                <RelativeLayout
                    android:id="@+id/rlLetter"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/profile_small_drawable"
                    android:padding="@dimen/_4sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvLetter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.69"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/_13sdp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical"
                        android:text="Valid : 10/24"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="SpUsage" />

                    <ImageView
                        android:id="@+id/ivCardimg"
                        android:layout_width="@dimen/_33sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:contentDescription="@string/todo" />
                    <!--                    android:src="@drawable/visa_card"-->

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlCheckedUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.17">

                <ImageView
                    android:id="@+id/ivCheck"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>