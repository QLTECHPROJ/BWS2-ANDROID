<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".dashboardModule.session.SessionExpContinueActivity">

        <LinearLayout
            android:id="@+id/llContinue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0sdp"
                android:layout_gravity="center"
                android:layout_weight="0.58"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@drawable/session_continue_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0sdp"
                android:layout_weight="0.42"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvCETitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/experience_a_free_brain_wellness_spa_session"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tvCESubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvCETitle"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:text="@string/this_free_brain_wellness_spa_session_is_a_one_off_and_its_effects_may_last_between_24_and_48_hours_how_long_they_last_depend_on_your_environmental_stresses_and_triggers_download_the_audio_to_discover_how_we_may_help_you_with_your_mental_health_challenges"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="SpUsage" />

                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/btnCreatePlaylist"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="@dimen/_33sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/light_green_rounded_filled"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/Continue"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnCreatePlaylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="@dimen/_33sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:background="@drawable/light_green_rounded_unfilled"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/create_your_playlist"
                        android:textColor="@color/app_theme_color" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>