<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/flMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="121dp"
        tools:context=".DashboardModule.Appointment.AppointmentFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_18sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="@string/Appointment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_30sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="@string/Next_Session"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSetSession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:elevation="3.6dp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/tvHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_14sdp"
                            android:text="@string/Appointment_Header"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvShowSession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:elevation="3.6dp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#F1F1F1"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:paddingLeft="@dimen/_16sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_16sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_17sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:id="@+id/llDates"
                                    android:layout_width="@dimen/_0sdp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_56sdp"
                                        android:layout_height="@dimen/_52sdp"
                                        android:padding="@dimen/_15sdp"
                                        android:src="@drawable/ic_calendar_icon" />

                                    <TextView
                                        android:id="@+id/tvDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llTime"
                                    android:layout_width="@dimen/_0sdp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_56sdp"
                                        android:layout_height="@dimen/_52sdp"
                                        android:padding="@dimen/_15sdp"
                                        android:src="@drawable/ic_time_icon" />

                                    <TextView
                                        android:id="@+id/tvTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">

                                <LinearLayout
                                    android:id="@+id/llHourGlass"
                                    android:layout_width="@dimen/_0sdp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_56sdp"
                                        android:layout_height="@dimen/_52sdp"
                                        android:padding="@dimen/_15sdp"
                                        android:src="@drawable/ic_hourglass_icon" />

                                    <TextView
                                        android:id="@+id/tvHourGlass"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/_0sdp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:text="Tasks to be completed before the Next Session"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_17sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:gravity="center_vertical">

                                <CheckBox
                                    android:id="@+id/cbTask1"
                                    style="@android:style/Widget.CompoundButton.RadioButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:button="@drawable/checkbox_btn_background"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/tvTaskTitle1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="start"
                                    android:text="Listen to Pre Session 1 Audio"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:gravity="center_vertical">

                                <CheckBox
                                    android:id="@+id/cbTask2"
                                    style="@android:style/Widget.CompoundButton.RadioButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:button="@drawable/checkbox_btn_background"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/tvTaskTitle2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="start"
                                    android:text="Complete Pre Session 1 eBooklet"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="start"
                        android:text="@string/Previous_Appointments"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPreviousData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:nestedScrollingEnabled="true"
                        android:overScrollMode="never" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <ImageView
                android:id="@+id/ImgV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="80dp"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#C0000000"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>
</layout>