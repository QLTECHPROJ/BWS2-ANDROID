<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DashboardModule.Playlist.MyPlaylistsFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_18sdp">

                    <RelativeLayout
                        android:id="@+id/llMainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_210sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/audio_bg" />

                        <RelativeLayout
                            android:id="@+id/rlLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_56sdp">

                            <LinearLayout
                                android:id="@+id/llBack"
                                android:layout_width="42dp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_left_arrow_icon"
                                    app:tint="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toRightOf="@id/llBack"
                                android:gravity="end">

                                <LinearLayout
                                    android:id="@+id/llReminder"
                                    android:layout_width="42dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_clock_icon"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llDownloads"
                                    android:layout_width="42dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_download_icon"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llMore"
                                    android:layout_width="42dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_menu_icon"
                                        app:tint="@color/white" />

                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:text="Playlist"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/tvLibraryName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_22sdp" />

                            <TextView
                                android:id="@+id/tvLibraryDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivPlaylistStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llMainLayout"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-36dp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_blue_play_icon" />

                    <LinearLayout
                        android:id="@+id/llAddAudio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ivPlaylistStatus"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Let's find some Audios for your playlist."
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_15sdp" />

                        <Button
                            android:id="@+id/btnAddAudio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_55sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:background="@drawable/extra_round_cornor"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/Add_Audio"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llListing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivPlaylistStatus"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/rlSearch"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:layout_weight="2"
                            android:background="@drawable/rounded_extra_gray_corner">

                            <ImageView
                                android:id="@+id/button1"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_14sdp"
                                android:src="@drawable/ic_search_icon"
                                app:tint="@color/dark_blue_gray" />

                            <TextView
                                android:id="@+id/tvSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="start"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/button1"
                                android:text="@string/Search_for_audio"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/_16sdp" />

                            <androidx.appcompat.widget.SearchView
                                android:id="@+id/searchView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:clickable="false"
                                android:focusable="true"
                                android:visibility="gone"
                                android:iconifiedByDefault="false"
                                android:singleLine="true"
                                android:theme="@style/WallSearchView"
                                app:queryBackground="@null"
                                app:queryHint="Search for audio"
                                app:searchHintIcon="@null"
                                app:searchIcon="@null" />


                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSuggestedList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:overScrollMode="never"
                            android:paddingTop="@dimen/_8sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:text="@string/Audios_in_Playlist"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPlayLists"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:overScrollMode="never"
                            android:paddingTop="@dimen/_8sdp" />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/flProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dim_light_gray">

                    <ProgressBar
                        android:id="@+id/pbLevelStatus"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|center_vertical|bottom"
                        android:indeterminate="false"
                        android:progress="60"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/llPlaSong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:background="#DDDDDD"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/nav_view">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            android:scaleType="fitXY"
                            android:src="@drawable/square_logo" />


                        <LinearLayout
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_bold"
                                android:maxLines="1"
                                android:text="Love Thy Self"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_17sdp" />

                            <TextView
                                android:id="@+id/tvSubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_medium"
                                android:maxLines="2"
                                android:text="Play the Love Thy Self every night on a low volume."
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivStatus"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            android:padding="@dimen/_13sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_all_pause_icon" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ImgV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="80dp"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#C0000000"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>
</layout>