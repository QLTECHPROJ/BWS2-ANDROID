                        android:layout_marginBottom="90dp"
                        android:layout_toEndOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="56"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivTenth"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginBottom="85dp"
                        android:layout_toEndOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="64"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivEleventh"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_38sdp"
                        android:layout_marginBottom="68dp"
                        android:layout_toEndOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="80"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivTwelveth"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_43sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:layout_toEndOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="91"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_10sdp"
                    android:text="@string/your_index_score_is"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/assesmentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/assesmentContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDoneAss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_33sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_green_rounded_filled"
                android:fontFamily="@font/montserrat_medium"
                android:paddingVertical="@dimen/_2sdp"
                android:text="@string/Continue"
                android:textColor="@color/white" />

        </RelativeLayout>
    </RelativeLayout>
</layout>