<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".assessmentProgressModule.activities.AssProcessActivity">

        <RelativeLayout
            android:id="@+id/rlDoAss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivDoAss"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_do_ass_icon" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivDoAss"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:text="@string/great"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/_10sdp"
                android:text="@string/ass_quotes"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                tools:ignore="SpUsage"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btnDoAss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_33sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_green_rounded_filled"
                android:fontFamily="@font/montserrat_medium"
                android:paddingVertical="@dimen/_2sdp"
                android:text="@string/do_the_assessment"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDoneAss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_28sdp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/Your_Assessment_Result"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    tools:ignore="SpUsage" />

                <RelativeLayout
                    android:layout_width="@dimen/_340sdp"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_29sdp"
                    android:background="@drawable/score_meter_bg"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivFirst"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_54sdp"
                        android:layout_marginBottom="@dimen/_46sdp"
                        android:layout_toStartOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="294"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_46sdp"
                        android:layout_marginBottom="@dimen/_64sdp"
                        android:layout_toStartOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="300"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivThird"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_80sdp"
                        android:layout_toStartOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="322"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivSeventeen"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/_34sdp"
                        android:layout_marginBottom="@dimen/_90sdp"
                        android:layout_toStartOf="@id/llSeverse"
                        android:contentDescription="@string/todo"
                        android:rotation="326"
                        android:src="@drawable/ic_score_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivForth"
                        android:layout_width="@dimen/_20sdp"
