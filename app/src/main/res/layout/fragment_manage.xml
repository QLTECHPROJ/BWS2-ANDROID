<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".dashboardModule.manage.ManageFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llNoInternet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_310sdp"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="-20dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_active_internet_bg" />

                <TextView
                    android:id="@+id/tvNoInterNet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="Whoooops!\nNo active internet :("
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/_20sdp"
                    tools:ignore="RtlSymmetry,SpUsage" />

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLightBg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/manage_bg_banner"
                        android:contentDescription="@string/todo"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_44sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:orientation="horizontal"
                            tools:ignore="DisableBaselineAlignment">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:gravity="start">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvDesc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:gravity="start"
                                        android:paddingStart="@dimen/_12sdp"
                                        android:text="@string/Enhance"
                                        android:textColor="@color/dark_blue_gray"
                                        android:textSize="@dimen/_18sdp"
                                        tools:ignore="RtlSymmetry,SpUsage" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llSearch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="0.1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivBall"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_21sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_12sdp"
                                    android:src="@drawable/ic_search_icon"
                                    app:tint="@color/gray"
                                    android:contentDescription="@string/todo" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPlayer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_64sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/round_gray_border"
                        android:backgroundTint="#1597AA"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:targetApi="lollipop">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/extra_rounded_light_gray"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_cloud_bg"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="0.2">

                                        <LinearLayout
                                            android:id="@+id/llSetReminder"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_13sdp"
                                            android:layout_marginEnd="@dimen/_13sdp"
                                            android:background="@drawable/rounded_extra_theme_corner"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_7sdp">

                                            <TextView
                                                android:id="@+id/tvReminder"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:gravity="start"
                                                android:paddingLeft="@dimen/_5sdp"
                                                android:paddingRight="@dimen/_5sdp"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_12sdp"
                                                tools:ignore="SpUsage" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.6"
                                        android:baselineAligned="false"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <LinearLayout
                                            android:id="@+id/llPlayerView1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="start"
                                            android:layout_weight="1.2"
                                            android:orientation="horizontal" />

                                        <LinearLayout
                                            android:id="@+id/llPlayPause"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.6"
                                            android:gravity="center">

                                            <LinearLayout
                                                android:id="@+id/llPlay"
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="@dimen/_60sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/ic_light_blue_play_icon"
                                                android:orientation="horizontal" />

                                            <LinearLayout
                                                android:id="@+id/llPause"
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="@dimen/_60sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/ic_pause_light_blue_icon"
                                                android:orientation="horizontal"
                                                android:visibility="gone" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/llPlayerView2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="right"
                                            android:layout_weight="1.2"
                                            android:orientation="horizontal" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llPlaylistDetails"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.18"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvPlaylistName"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_25sdp"
                                                android:fontFamily="@font/montserrat_bold"
                                                android:gravity="start"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp"
                                                tools:ignore="SpUsage" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/_25sdp"
                                            android:layout_marginRight="@dimen/_25sdp"
                                            android:orientation="horizontal"
                                            android:weightSum="10">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_weight="7"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:gravity="start"
                                                android:text="Sleep start in your brain"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_13sdp"
                                                tools:ignore="SpUsage" />

                                            <TextView
                                                android:id="@+id/tvTime"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="3"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:gravity="end"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_13sdp"
                                                tools:ignore="SpUsage" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_25sdp"
                                                android:layout_marginTop="@dimen/_15sdp"
                                                android:layout_marginRight="@dimen/_25sdp"
                                                android:max="100"
                                                android:progress="25"
                                                android:progressBackgroundTint="@color/white"
                                                android:visibility="invisible" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSleepTime"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/_17sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_17sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_moon_sleep"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:id="@+id/tvSleepTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="start"
                                android:paddingStart="@dimen/_10sdp"
                                android:textColor="@color/text_new_light_blue"
                                android:textSize="@dimen/_14sdp"
                                tools:ignore="RtlSymmetry,SpUsage" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llListData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llPlayer"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/llMainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="start"
                                android:text="Playlist"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:visibility="visible"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/tvViewAll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="end"
                                android:text="@string/View_all"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="visible"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSpace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/rlCreatePlaylist"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:id="@+id/ivCreatePlaylist"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_create_playlist"
                                                android:contentDescription="@string/todo" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_marginStart="@dimen/_13sdp"
                                                android:fontFamily="@font/montserrat_semi_bold"
                                                android:gravity="start|bottom"
                                                android:paddingBottom="@dimen/_8sdp"
                                                android:text="Create \nNew Playlist"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_12sdp"
                                                tools:ignore="SpUsage" />
                                            <!-- <ImageView
                                                 android:id="@+id/ivLock"
                                                 android:layout_width="@dimen/_24sdp"
                                                 android:layout_height="@dimen/_24sdp"
                                                 android:layout_marginStart="@dimen/_8sdp"
                                                 android:layout_marginLeft="@dimen/_8sdp"
                                                 android:layout_marginTop="@dimen/_10sdp"
                                                 android:contentDescription="TODO"
                                                 android:src="@drawable/ic_lock_icon"
                                                 android:visibility="gone"
                                                 app:layout_constraintLeft_toLeftOf="parent"
                                                 app:layout_constraintTop_toTopOf="parent" />-->

                                        </RelativeLayout>
                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvMainPlayList"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:nestedScrollingEnabled="true"
                                        android:orientation="horizontal"
                                        android:overScrollMode="never"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        tools:listitem="@layout/playlist_custom_layout"
                                        tools:targetApi="lollipop" />

                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSpace1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvMainAudioList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:paddingBottom="@dimen/_70sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_60sdp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:indeterminateTint="@color/blue"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    tools:targetApi="lollipop" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#C0000000"
                android:visibility="gone" />
        </RelativeLayout>

    </FrameLayout>
</layout>