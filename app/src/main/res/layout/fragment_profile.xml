<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".DashboardTwoModule.profile.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_14sdp">

                    <LinearLayout
                        android:id="@+id/llUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.brainwellnessspa.RoundedImageView
                                android:id="@+id/civProfile"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/default_profile"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/rlLetter"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:background="@drawable/profile_small_drawable"
                                android:padding="@dimen/_4sdp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvLetter"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_26sdp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <TextView
                                android:id="@+id/tvViewProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="@string/view_profile"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/account_gray_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llAcInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/ic_user_two_icon" />

                            <TextView
                                android:id="@+id/tvAcInfo"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Account Info"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llPlan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_upgrade_plan_icon" />

                            <TextView
                                android:id="@+id/tvPlan"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Upgrade Plan"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:background="@drawable/account_gray_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llDownloads"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/ic_download_icon" />

                            <TextView
                                android:id="@+id/tvDownloads"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Downloads"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llResources"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_6sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_resource_icon" />

                            <TextView
                                android:id="@+id/tvResources"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center_vertical"
                                android:text="Resources"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_6sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_clock_icon" />

                            <TextView
                                android:id="@+id/tvReminder"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center_vertical"
                                android:text="Reminder"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llBillingOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/ic_payment_icon" />

                            <TextView
                                android:id="@+id/tvBillingAndOrder"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Billing and Order"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llInvoices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/ic_invoice_icon" />

                            <TextView
                                android:id="@+id/tvInvoices"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Invoices"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:background="@drawable/account_gray_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llFAQ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/faq_ac_icon" />

                            <TextView
                                android:id="@+id/tvFAQ"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="FAQ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/dim_light_gray" />

                        <LinearLayout
                            android:id="@+id/llLogOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_16sdp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:paddingVertical="@dimen/_2sdp"
                                android:src="@drawable/ic_sign_out_icon" />

                            <TextView
                                android:id="@+id/tvLogOut"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="Log Out"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_6sdp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_right_arrow_ac_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/cardview_gray_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvVersion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:background="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_horizontal|top"
                            android:paddingBottom="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_60sdp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:indeterminateTint="@color/blue"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#C0000000"
                android:visibility="gone" />
        </RelativeLayout>


    </FrameLayout>
</layout>