<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".dashboardModule.profile.ProfileFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/llUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/llImageUpload"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingTop="@dimen/_20sdp"
                        tools:ignore="RtlSymmetry">

                        <com.brainwellnessspa.RoundedImageView
                            android:id="@+id/civProfile"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/default_profile"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/rlLetter"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/profile_small_drawable"
                            android:padding="@dimen/_4sdp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tvLetter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="center"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_48sdp"
                                tools:ignore="SpUsage" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="34dp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:src="@drawable/ic_profile_camera_icon"
                            android:contentDescription="@string/todo" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvViewProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/view_profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone"
                            tools:ignore="SpUsage" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/account_gray_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/llPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1"
                        android:visibility="visible"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_upgrade_plan_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvPlan"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/purchase_plan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>
                    <!--<LinearLayout
                        android:id="@+id/llPlan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1"
                        android:visibility="gone"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_upgrade_plan_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvPlan1"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/upgrade_plan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:background="@drawable/account_gray_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llAcInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_user_two_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvAcInfo"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/account_info"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llDownloads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_download_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvDownloads"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/downloads_profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llResources"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_6sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_resource_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvResources"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical"
                            android:text="@string/resources"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_6sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_clock_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvReminder"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical"
                            android:text="@string/reminder_profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:id="@+id/viewBillingOrder"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:visibility="gone"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llBillingOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_payment_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvBillingAndOrder"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/billing_and_order"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:visibility="gone"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llInvoices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:visibility="gone"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_invoice_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvInvoices"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/invoices_profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:id="@+id/viewManage"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:visibility="gone"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llManageUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:visibility="visible"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_manage_user_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvManageUser"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/manage_user"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:background="@drawable/account_gray_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:visibility="visible"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_support_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvSupport"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/Support"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:visibility="visible"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/faq_ac_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvFAQ"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/faqs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/dim_light_gray" />

                    <LinearLayout
                        android:id="@+id/llLogOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_16sdp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:paddingVertical="@dimen/_2sdp"
                            android:src="@drawable/ic_sign_out_icon"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/tvLogOut"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:text="@string/log_out"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_right_arrow_ac_icon"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/cardview_gray_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_horizontal|top"
                        android:paddingBottom="@dimen/_60sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="SpUsage" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_60sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:indeterminateTint="@color/blue"
                android:scaleType="centerInside"
                android:visibility="gone"
                tools:targetApi="lollipop" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />

    </RelativeLayout>
</layout>