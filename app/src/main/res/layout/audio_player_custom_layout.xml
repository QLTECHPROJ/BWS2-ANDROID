<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_18sdp">

        <RelativeLayout
            android:id="@+id/rlSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <!--<SeekBar
                android:id="@+id/simpleSeekbar"
                android:layout_width="match_parent"
            android:progressDrawable="@drawable/seek_bars"
            android:thumb="@drawable/ic_dot_icon"
                android:layout_height="wrap_content" />-->
            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@+id/exoProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                app:buffered_color="@color/buffer_seek_bar_background"
                app:played_color="@color/gray"
                app:scrubber_color="@color/seek_bar_background"
                app:scrubber_drawable="@drawable/ic_dot_icon"
                app:unplayed_color="@color/seek_bar_background" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exoProgress"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_22sdp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvSongTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exoProgress"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_22sdp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llBackWordSec"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_fast_backword_sec_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHighlights"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="match_parent"
                android:layout_weight="0.60"
                android:weightSum="0.60">

                <LinearLayout
                    android:id="@+id/llPrev"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivprev"
                        android:layout_width="@dimen/_31sdp"
                        android:layout_height="@dimen/_31sdp"
                        android:src="@drawable/ic_backword_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPlay"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.24"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_2sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_blue_play_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPause"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.24"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_2sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivPause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pause_icon" />
                </LinearLayout>

                <!--<LinearLayout
                    android:id="@+id/llProgressBar"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.24"
                    android:background="@drawable/progress_bar_background"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:visibility="visible">-->

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.24"
                        android:indeterminateTint="@color/blue"
                        android:paddingTop="@dimen/_13sdp"
                        android:paddingBottom="@dimen/_13sdp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
              <!--  </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/llNext"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:gravity="center"
                    android:paddingRight="@dimen/_6sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivnext"
                        android:layout_width="@dimen/_31sdp"
                        android:layout_height="@dimen/_31sdp"
                        android:src="@drawable/ic_forward_icon"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForwardSec"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_fast_forward_sec_icon" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>