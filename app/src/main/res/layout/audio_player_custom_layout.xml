<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_18sdp"
            android:gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSeekbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0sdp"
                android:layout_weight="0.34"
                android:gravity="bottom">

                <SeekBar
                    android:id="@+id/simpleSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:progressDrawable="@drawable/seek_bars"
                    android:thumb="@drawable/ic_dot_icon" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simpleSeekbar"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvSongTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simpleSeekbar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llAction"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@id/llBottom"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_weight="0.42"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/llBackWordSec"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_fast_backword_sec_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHighlights"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:weightSum="0.60">

                    <LinearLayout
                        android:id="@+id/llprev"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.19"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivprev"
                            android:layout_width="@dimen/_31sdp"
                            android:layout_height="@dimen/_31sdp"
                            android:src="@drawable/ic_backword_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPlay"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.24"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivplay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_blue_play_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPause"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.24"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivPause"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_pause_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llProgressBar"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.24"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:visibility="visible">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="0.13"
                            android:indeterminateTint="@color/blue"
                            android:scaleType="fitXY"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llnext"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.19"
                        android:gravity="center"
                        android:paddingRight="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/ivnext"
                            android:layout_width="@dimen/_31sdp"
                            android:layout_height="@dimen/_31sdp"
                            android:src="@drawable/ic_forward_icon" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llForwardSec"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_fast_forward_sec_icon" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>