<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_220sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.66"
            android:layout_marginLeft="@dimen/_40sdp"
            android:orientation="vertical"
            android:paddingRight="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="My Downloads"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />


            <TextView
                android:id="@+id/tvGotIt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="All your downloaded audios &amp; playlists"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rlNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_corner"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_25sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_33sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_weight="0.38">

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:rotation="180"
                android:layout_gravity="center"
                android:src="@drawable/highlights_arrow"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>