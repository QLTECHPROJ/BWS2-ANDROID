<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".dashboardModule.elevate.ElevateFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llNoInternet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_310sdp"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="-20dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_active_internet_bg" />

                <TextView
                    android:id="@+id/tvNoInterNet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="@string/whoooops_nno_active_internet"
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/_20sdp"
                    tools:ignore="RtlSymmetry,SpUsage" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llRemainDev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_310sdp"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="-20dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_under_construction_bg" />

                <TextView
                    android:id="@+id/tvRemainDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="@string/this_page_is_under_construction"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="RtlSymmetry,SpUsage" />

                <TextView
                    android:id="@+id/tvRemainDevWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="@string/we_re_working_on_it"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="RtlSymmetry,SpUsage" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>