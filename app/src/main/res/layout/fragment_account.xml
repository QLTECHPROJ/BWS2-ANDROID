<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context="com.brainwellnessspa.DashboardModule.Account.AccountFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContactList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:nestedScrollingEnabled="true"
                android:overScrollMode="never"
                android:visibility="visible"
                tools:listitem="@layout/contact_list_layout" />
-->

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_14sdp">

                    <LinearLayout
                        android:id="@+id/llUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.20"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/civProfile"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/default_profile"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/rlLetter"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:background="@drawable/profile_small_drawable"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvLetter"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_26sdp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_weight="0.65"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <TextView
                                android:id="@+id/tvViewProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="start"
                                android:text="@string/view_profile"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:gravity="center_vertical|right">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_back_black_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llDownloads"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_16sdp"
                                android:src="@drawable/ic_download_icon" />

                            <TextView
                                android:id="@+id/tvDownloads"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:text="My Downloads"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llFavorites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_16sdp"
                                android:src="@drawable/ic_like_white_icon"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/tvFavorites"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/Liked"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llInvoices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_16sdp"
                                android:src="@drawable/ic_invoice_icon" />

                            <TextView
                                android:id="@+id/tvInvoices"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/invoices"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBillingOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_17sdp"
                                android:src="@drawable/ic_payment_icon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvBillingAndOrder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_18sdp"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:gravity="start"
                                    android:text="@string/billing_and_order"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp" />

                                <TextView
                                    android:id="@+id/tvCrtPlan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_18sdp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="start"
                                    android:textColor="@color/light_gray"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_1sdp"
                                android:src="@drawable/ic_clock_icon" />

                            <TextView
                                android:id="@+id/tvReminder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/reminder"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llResource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_1sdp"
                                android:src="@drawable/ic_resource_icon" />

                            <TextView
                                android:id="@+id/tvResource"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/Resources"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llRefer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_14sdp"
                                app:tint="@color/dark_blue_gray"
                                android:src="@drawable/ic_refer_a_friend_icon" />

                            <TextView
                                android:id="@+id/tvRefer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/Refer_Friend"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llFaq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_16sdp"
                                android:src="@drawable/ic_faq_icon" />

                            <TextView
                                android:id="@+id/tvFaq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/faq"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/ic_support_icon" />

                            <TextView
                                android:id="@+id/tvSupport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="start"
                                android:text="@string/Support"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_28sdp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:padding="@dimen/_18sdp"
                                android:src="@drawable/ic_logout_icon" />

                            <TextView
                                android:id="@+id/tvLogout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="left"
                                android:text="@string/logout"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvVersion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:background="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_horizontal|top"
                            android:paddingBottom="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_60sdp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:indeterminateTint="@color/blue"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:animateLayoutChanges="true"
                android:background="#C0000000"
                android:visibility="gone" />
        </RelativeLayout>

    </FrameLayout>
</layout>
