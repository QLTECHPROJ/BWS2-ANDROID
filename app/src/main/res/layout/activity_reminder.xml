<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow_icon"
                    app:tint="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/Reminder"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_31sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_big_clock_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="Get a notification reminding you to listen to your selected playlists."
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="What time do you want to set the reminder?"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:id="@+id/llSelectTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:background="@drawable/transparent_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_18sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_big_clock_icon" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="09:00 am"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start"
                    android:text="@string/Repeat"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3.5">

                    <LinearLayout
                        android:id="@+id/llSunday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSunday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMonday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvMonday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="M"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTuesday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTuesday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="T"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llWednesday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWednesday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="W"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llThursday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvThursday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="T"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llFriday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvFriday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="F"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSaturday"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSaturday"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/transparent_bg"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="S"
                            android:textColor="@color/dark_blue_gray"
                            android:textSize="@dimen/_17sdp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReminderDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:isScrollContainer="false"
                    android:visibility="gone"
                    android:overScrollMode="never" />

                <LinearLayout
                    android:id="@+id/llSelectPlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="start"
                            android:text="Playlist"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_18sdp" />

                        <ImageView
                            android:id="@+id/ivArrow"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_back_black_icon"
                            app:tint="@color/black" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPlaylistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="start"
                        android:text="@string/Select_Playlist"
                        android:textColor="#7E7E7E"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>


                <Switch
                    android:id="@+id/switchStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_48sdp"
                    android:checked="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Reminder Status"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0sdp"
                android:layout_gravity="center|bottom"
                android:layout_weight="0.1"
                android:gravity="center|bottom">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_33sdp"
                    android:background="@drawable/gray_extra_round_corners"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingVertical="@dimen/_2sdp"
                    android:enabled="false"
                    android:text="@string/Set_a_Reminder"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_60sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:indeterminateTint="@color/blue"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />
    </RelativeLayout>
</layout>