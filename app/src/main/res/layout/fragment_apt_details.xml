<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DashboardModule.Appointment.AppointmentDetails.AptDetailsFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTilte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="start"
                        android:text="Emotional empowerment program session 1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_17sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/llDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:elevation="3.6dp"
                        app:cardCornerRadius="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civProfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_13sdp"
                                    android:src="@color/colorAccent" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvFacilitator"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:text="Facilitator"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/tvUserName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_semi_bold"
                                        android:gravity="start"
                                        android:text="Kylie Butler"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_13sdp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/llDates"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_42sdp"
                                        android:layout_height="@dimen/_42sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/ic_calendar_icon" />

                                    <TextView
                                        android:id="@+id/tvDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:text="4 November, 2019"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_42sdp"
                                        android:layout_height="@dimen/_42sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/ic_time_icon" />

                                    <TextView
                                        android:id="@+id/tvTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:gravity="start"
                                        android:text="11:00 am"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11sdp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llDetails"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/_4sdp"
                        android:text="We begin your journey towards emotional empowerment by helping you to strengthen your foundations. By doing so, you may be able to better cope with the conditions of your current reality, without feeling distressed or overwhelmed by daily challenges and problems. Your natural emotional reality may begin to shift from suffering to inner-peace, and you may experience more control over your thoughts, feelings and emotions. Like any journey worth completing, there may be times in this initial session where you could feel uncomfortable or challenged as you let go of past, ineffective, habitual ways of thinking. The reward of a happier, healthier and more fulfilling life could be possible if you are willing to allow our Brain Wellness Spa facilitator to help guide you past any initial resistance. Our Emotional Empowerment Program is on average 12 - 16 sessions."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_55sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:background="@drawable/extra_round_cornor"
                android:fontFamily="@font/montserrat_medium"
                android:paddingVertical="@dimen/_2sdp"
                android:text="@string/Book_Now"
                android:textColor="@color/white" />

        </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </FrameLayout>
</layout>