        <RelativeLayout
            android:id="@+id/llSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMainLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:text="@string/which_gender_do_you_identify_as"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnMale"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@id/tvSecond"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_blue_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/male"
                android:textAllCaps="false"
                android:textColor="@color/light_blue_theme" />

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@id/btnMale"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/female"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

            <Button
                android:id="@+id/btnGenX"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/btnFemale"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/gender_x"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMainLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btnGenXReverse"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_33sdp"
                android:background="@drawable/light_blue_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/gender_x"
                android:textAllCaps="false"
                android:textColor="@color/light_blue_theme" />

            <TextView
                android:id="@+id/tvThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnGenXReverse"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/what_gender_do_you_currently_nidentify_with"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnMaleGX"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@id/tvThird"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/male"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

            <Button
                android:id="@+id/btnFemaleGX"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@id/btnMaleGX"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/female"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llForth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMainLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvForth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:text="@string/what_is_your_date_of_birth"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tvForth1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvForth"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/long_lorem"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnOpn1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/tvForth"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_blue_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/light_blue_theme" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llFifth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMainLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvFifthTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:text="@string/prev_drug_use"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tvFifthSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFifthTitle"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/drug_quotes"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/tvFifthSubTitle"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_blue_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/light_blue_theme" />


            <Button
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/btnYes"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llSixth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMainLayout"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvSixthTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start"
                android:text="@string/any_medication_is_going_on"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tvSixthSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSixthTitle"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/long_lorem"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/btnSixYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/tvSixthSubTitle"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_blue_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/light_blue_theme" />


            <Button
                android:id="@+id/btnSixNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64sdp"
                android:layout_below="@+id/btnSixYes"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_gray_rounded_unfilled"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/light_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_60sdp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:indeterminateTint="@color/blue"
                android:scaleType="centerInside"
                android:visibility="gone"
                tools:targetApi="lollipop" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:animateLayoutChanges="true"
            android:background="#C0000000"
            android:visibility="gone" />
    </RelativeLayout>
</layout>