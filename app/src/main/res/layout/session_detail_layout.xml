<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llBorder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/session_complete_selected_bg"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.18"
                android:background="@drawable/session_dark_bg"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_0sdp">

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_40sdp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_weight="0.55"
                android:gravity="start|center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_0sdp"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlDownload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="0.16">

                <ImageView
                    android:id="@+id/ivDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:padding="@dimen/_14sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_session_download_icon"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="0.12">

                <ImageView
                    android:id="@+id/ivAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:contentDescription="@string/todo"
                    android:padding="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_session_seen_icon" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewDown"
            android:layout_width="6dp"
            android:layout_height="@dimen/_31sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:background="@color/session_progress"
            android:visibility="gone" />

    </RelativeLayout>
</layout>