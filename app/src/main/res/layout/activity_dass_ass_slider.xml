<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DassAssSliderTwo.DassAssSliderActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="1"
            android:layout_marginTop="@dimen/_20sdp">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.75"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="left"
                android:text="Dass 21 Assessment"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />
            <TextView
                android:id="@+id/tvNumberOfQus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="right"
                android:text="2/21"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"/></LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:progress="2"
        android:max="21"
        android:progressBackgroundTint="@color/dark_yellow"
        android:layout_marginRight="@dimen/_20sdp"/>
</LinearLayout>
</layout>