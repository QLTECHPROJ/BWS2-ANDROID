<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DashboardTwoModule.home.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/manage_bg_banner"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginLeft="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginRight="@dimen/_26sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivUser"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_gray_user" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBottomView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="left">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="left"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:textColor="@color/dark_blue_gray"
                                    android:textSize="@dimen/_12sdp" />
                                <ImageView
                                    android:id="@+id/ivClickDown"
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:src="@drawable/ic_down_arrow"
                                    app:tint="@color/gray" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llClick"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="0.1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivBall"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:src="@drawable/ic_notifications_black_24dp"
                                app:tint="@color/gray" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/round_gray_border"
                    android:backgroundTint="#1597AA"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_light_gray"
                        android:backgroundTint="#36C2D6"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_cloud_bg"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_cloud_bg"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.2">

                                    <LinearLayout
                                        android:id="@+id/llsetReminder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_13sdp"
                                        android:layout_marginRight="@dimen/_13sdp"
                                        android:background="@drawable/rounded_extra_gray_corner"
                                        android:backgroundTint="@color/lighit_new_blue1"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/montserrat_light"
                                            android:gravity="start"
                                            android:paddingLeft="@dimen/_9sdp"
                                            android:text="@string/Set_Reminder"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_12sdp" />

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:id="@+id/llPlay"
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_light_blue_play_icon"
                                        android:orientation="horizontal" />

                                    <LinearLayout
                                        android:id="@+id/llPause"
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_pause_light_blue_icon"
                                        android:orientation="horizontal"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/_25sdp"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:gravity="left"
                                            android:text="Ultimate Anger Relief"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_14sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_25sdp"
                                        android:layout_marginRight="@dimen/_25sdp"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="7"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="left"
                                            android:text="Sleep start in your brain"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13sdp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="right"
                                            android:text="07:10:47"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <com.google.android.material.progressindicator.LinearProgressIndicator
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_25sdp"
                                            android:layout_marginTop="@dimen/_15sdp"
                                            android:layout_marginRight="@dimen/_25sdp"
                                            android:max="100"
                                            android:progress="25"
                                            android:progressBackgroundTint="@color/white" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_moon_sleep" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_9sdp"
                            android:text="Your average sleep time is 7 hours"
                            android:textColor="@color/text_new_light_blue"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llPlayer"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivEditCategory"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit_number_icon"
                                app:tint="@color/light_black" />

                            <TextView
                                android:id="@+id/tvArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left"
                                android:text="Area of focus"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="never"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"
                            tools:itemCount="3"
                            tools:listitem="@layout/selected_category_raw" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left"
                                android:text="Lorem ipsum"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/round_chip_gray"
                            android:backgroundTint="#DC828E"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_marginBottom="@dimen/_25sdp"
                                android:layout_weight="6"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left"
                                    android:text="Check you Index Score"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_18sdp" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left"
                                    android:maxLines="2"
                                    android:text="You are completely on track, keep it up!"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical">
                                <!-- graph-->
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="left"
                            android:text="Index Score"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="left"
                            android:text="Your latest index score"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left"
                                    android:text="46"
                                    android:textColor="@color/dark_yellow"
                                    android:textSize="@dimen/_35sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left"
                                    android:text="Severe"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_18sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/ic_arrow_blue_icon"
                                    android:backgroundTint="@color/green_dark_s"
                                    android:rotation="-90" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="bottom"
                                    android:text="15%"
                                    android:textColor="@color/green_dark_s"
                                    android:textSize="@dimen/_20sdp" />
                            </LinearLayout>


                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="46"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:progressBackgroundTint="@color/green_dark_s" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="bottom"
                            android:maxLines="2"
                            android:layout_marginRight="@dimen/_33sdp"
                            android:text="Index scores would not improve this would not let it increase the problem."
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/_20sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/round_chip_gray"
                            android:backgroundTint="#9A86BB"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_weight="7"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="left"
                                    android:text="Emotional Empowerment"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_18sdp" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="left"
                                    android:maxLines="2"
                                    android:text="Lorem ipsum dolor sit amet, consetetur"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />

                                <Button
                                    android:id="@+id/btnExplore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@drawable/rounded_extra_gray_corner"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Join Now"
                                    android:backgroundTint="#7352AA"
                                    android:textColor="@color/white"
                                    android:textAllCaps="false"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>
